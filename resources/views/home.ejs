<section class="hero py-4">
    <div class="container mx-auto flex items-center justify-between px-16 my-4">
        <div>
            <h6 class="text-3xl py-2"><em>Are You hungry?</em></h6>
            <h1 class="text-6xl font-bold py-2 md:text-3xl sm:text-3xl lg:text-4xl xl:text-6xl 2xl:text-6xl">Don't Wait !</h1>
            <button class="px-6 py-2 text-white font-bold mt-4 btn-primary">Order now</button>
        </div>
        <div>
           <img src="/img/pizza1.jpeg" alt="no img" class="h-96 w-96 sm:h-40 sm:w-40 md:h-72 md:w-72 lg:h-80 lg:w-80 xl:h-96 xl:w-96 2xl:h-96 2xl:w-96">
        </div>
    </div>
</section>

<section class="mx-auto items-center my-4">
    <h1 class="text-2xl font-bold mb-8 ml-6">All pizzas</h1>
    <!--wrapper for menu items-->
    <div class="grid mx-auto items-center justify-center sm:grid-cols-1 sm:items-center sm:justify-center md:place-items-center md:items-center md:justify-center  md:grid-cols-1 lg:grid-cols-2  xl:grid-cols-3 2xl:grid-cols-4 gap-x-8 gap-y-10">

        
        <% pizzas.forEach(function(pizza){ %>

            
        <div class="w-full h-full md:w-96 md:h-full lg:w-72 xl:w-56 lg:h-full xl:h-full 2xl:w-96 2xl:h-full">

            <img class="w-64 h-64 md:w-96 md:h-96 lg:h-72 lg:w-72 xl:w-56 xl:h-56 2xl:w-48 2xl:h-48 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="no img"/>

            <div class="text-center ">
                <h2 class="mb-4 text-2xl sm:text-2xl md:text-3xl lg:text-xl"><%= pizza.name %></h2>
                <h2 class="mb-4 text-xl sm:text-xl md:text-2xl lg:text-lg"><%= pizza.description %></h2>
                <span class="size py-1 px-4 uppercase text-sm md:text-lg lg:text-base"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg md:text-xl">â‚¹<%= pizza.price %></span>
                    <button data-pizza="<%=JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4 text-lg md:text-xl">Add</span>
                    </button>
                </div>  
            </div>

        </div>


       <% }) %>
    </div>
</section> 