<section class="hero py-4">
    <div class="container mx-auto flex items-center justify-between px-16 my-4">
        <div>
            <h6 class="text-3xl py-2"><em>Are You hungry?</em></h6>
            <h1 class="text-6xl font-bold py-2">Don't Wait !</h1>
            <button class="px-6 py-2 text-white font-bold mt-4 btn-primary">Order now</button>
        </div>
        <div>
           <img src="/img/pizza1.jpeg" alt="no img" class="hw-500vh">
        </div>
    </div>
</section>
<section class="menu container mx-auto px-16 my-4">
    <h1 class="text-xl font-bold mb-8">All pizzas</h1>
    <!--wrapper for menu items-->
    <div class="grid grid-cols-4 gap-x-8 gap-y-10">

        <!--1-->
        <% pizzas.forEach(function(pizza){ %>

            
        <div class="w-64">

            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="no img"/>

            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <h2 class="mb-4 text-sm"><%= pizza.description %></h2>
                <span class="size py-1 px-4 uppercase text-xs"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                    <button class="add-to-cart py-1 px-6 flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>

        </div>


       <% }) %>
    </div>
</section>