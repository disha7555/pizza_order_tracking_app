<section class="login flex items-center justify-center py-14">
    <div class="bg-white p-6 shadow-lg w-full h-full max-w-md md:max-w-1/3 lg:max-w-1/4 xl:max-w-1/6 2xl:max-w-1/8">
        <h2 class="text-2xl font-bold mb-6 text-center">Register your account</h2>
        <form action="/register" method="post">
            <!--messages is object of flash package which is received by froend directly-->
           <% if(messages.error){ %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %>
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                <input name="name" value="<%= messages.name%>" type="text" id="name" placeholder="Enter Your Name" class="mt-1 block w-full px-3 py-2 border border-gray-300  shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
                <input name="email" value="<%= messages.email%>" type="email" id="email" placeholder="Enter Your Email Address" class="mt-1 block w-full px-3 py-2 border border-gray-300  shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            <div class="mb-6">
                <div class="flex justify-between items-center">
                    <label for="password" class="block text-sm font-medium text-gray-700" >Password</label>
                  
                </div>
                <input name="password" type="password" id="password" placeholder="Enter Your Password" class="mt-1 block w-full px-3 py-2 border border-gray-300  shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            <div class="flex justify-between items-center mx-auto">
            <button type="submit" class="text-white py-2 text-center px-10 btn-primary">
                Register
            </button>
            <a href="/login" class=" text-center text-sm forgot_password">Already have an account?</a>
            </div>
        </form>
    </div>
</section>